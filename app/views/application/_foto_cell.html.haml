.foto_cell
  %label
    .img{ :data => foto.has_thumb? ? "" : { :type => :foto } }
      = image_tag foto_file_path(foto)
    .icons
      = form.input_field :_id, :as => :boolean, :checked => false, :class => 'icon-ok-sign add', :data => { :type => :fade, :to => ".foto_cell"}
  .icons
    = link_to "#", :class => 'tagged' do
      %i.icon-bookmark
    = link_to user_foto_path(foto.user, foto) do
      .zoomin
        %i.icon-zoom-in